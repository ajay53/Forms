<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Forms;assembly=Forms"
             x:Class="Forms.Views.WatermarkPage">
    
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Watermark Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="cameraImageNameEntry" Placeholder="Enter Image Name"/>

            <Entry x:Name="watermarkTextEntry" Placeholder="Enter Watermark Text" />

            <Image x:Name="image"
                   Aspect="AspectFill"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>

            <Button
                Text="Take Photo"
                BackgroundColor="Lime"
                Grid.Row="2"
                Clicked="TakePhoto_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>